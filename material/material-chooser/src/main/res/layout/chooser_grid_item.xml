<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    tools:layout_width="100dp"
    android:layout_height="wrap_content"
    android:minWidth="80dp"
    android:gravity="center"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:background="?android:selectableItemBackgroundBorderless">

    <FrameLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView android:id="@android:id/icon"
            android:layout_width="@dimen/rd_chooser_icon_size"
            android:layout_height="@dimen/rd_chooser_icon_size"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:scaleType="fitCenter"
            android:importantForAccessibility="no"/>

        <!--<View
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/btn_check_material_anim"
            android:layout_gravity="end|bottom"
            android:stateListAnimator="@animator/check_select"
            android:alpha="0"/>-->

        <ImageView android:id="@+id/target_badge"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="end|bottom"
            android:visibility="gone"
            android:scaleType="fitCenter"
            android:importantForAccessibility="no"/>
    </FrameLayout>

    <!-- Activity name -->
    <TextView android:id="@android:id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="?android:textColorPrimary"
        android:textSize="12sp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="top|center_horizontal"
        android:minLines="2"
        android:maxLines="2"
        android:ellipsize="marquee"
        tools:text="App name"/>

    <!-- Extended activity info to distinguish between duplicate activity names -->
    <TextView android:id="@android:id/text2"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:minLines="2"
        android:maxLines="2"
        android:gravity="top|center_horizontal"
        android:ellipsize="marquee"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="App name"/>
</LinearLayout>